{
  "name": "Пояснятор",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Поясняет.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Пояснятор"
  },
  "permissions": ["declarativeContent"],
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["inject.js"]
    }],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
